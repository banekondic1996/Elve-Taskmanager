{
    "name": "ElveSystemMonitor",
    "version": "1.0.0",
    "author": "Bane Kondic",
    "main": "main.js",
    "window": {
        "title": "Elve System Monitor",
        "width": 1200,
        "height": 800,
        "min_width": 800,
        "min_height": 600
    },
    "dependencies": {
        "nw": "^0.105.0"
    },
    "build": {
      "appId": "com.elve.system.monitor",
      "asar": true,
      "productName": "Elve System Monitor",
      "files": [
        "!**/node_modules/*/{test,__tests__,*.md,*.map,*.log}",
        "!**/node_modules/.bin",
        "dist/**/*",
        "Elve Monitor 512.png",
        "main.js",
        "index.html",
        "package.json"
      ],
      "linux": {
        "target": [
          "AppImage"
        ],
        "category": "Utility",
        "icon": "Elve Monitor 512.png"
      }
    },
    "devDependencies": {
      "electron": "^39.0.0",
      "electron-builder": "^26.0.12",
      "nw": "^0.80.0"
    },
    "scripts": {
      "start nw": "nw .",
      "start electron": "electron .",
      "dist": "electron-builder"
    }
  }
  